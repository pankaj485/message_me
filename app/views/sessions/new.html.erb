<h2 class="ui center aligned medium icon header">
  <i class="circular power orange icon"></i>
  Login to continue
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_with model: @sessions, local: true do |form| %>
          <div class="field">
            <label>Username</label>
            <div class="ui left icon input">
              <%= form.text_field :Username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <label>Password</label>
            <div class="ui left icon input">
              <%= form.text_field :Password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= form.submit "Login", class: "ui orange submit button" %>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column ">
      <div class="ui big button orange">
        <i class="signup icon "></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
