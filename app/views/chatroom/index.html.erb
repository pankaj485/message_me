<h2 class="ui center aligned medium icon header">
  <i class="circular coffee orange icon"></i>
  Friends
</h2>

<div class="ui grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <!-- as we are passing @messages to render, it expects partial with structure of views/messages/_message.html.erb  -->
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="ui fluid icon input">
            <input type="text" placeholder="Enter a message...">
            <i class="bordered inverted orange edit icon"></i>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical pointing menu">
          <a class="item active">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
